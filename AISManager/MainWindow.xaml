<?xml version="1.0" encoding="UTF-8" ?>
<Window x:Class="AISManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AISManager"
        mc:Ignorable="d"
        Title="AIS Update Manager"
        Height="700"
        Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Window.Resources>
        <!-- Стили кнопок (оставил ваши, немного освежил) -->
        <Style x:Key="MenuButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="#A0AEC0" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Left" />
            <Setter Property="Padding"
                    Value="20,12" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="White" />
                    <Setter Property="Background"
                            Value="#38455A" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ActiveMenuButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background"
                    Value="#2A4365" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="BorderBrush"
                    Value="#4299E1" />
            <Setter Property="BorderThickness"
                    Value="4,0,0,0" />
        </Style>
        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#3182CE" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Padding"
                    Value="25,10" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#2B6CB0" />
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Background"
                            Value="#A0AEC0" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- САЙДБАР -->
        <Border Grid.Column="0"
                Background="#1A202C">
            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="20,30,20,5">
                    <TextBlock Text="AIS"
                               Foreground="#4299E1"
                               FontWeight="Bold"
                               FontSize="20" />
                    <TextBlock Text=" Manager"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="20" />
                </StackPanel>
                <TextBlock Text="Automated Update System"
                           Foreground="#718096"
                           FontSize="11"
                           Margin="20,0,0,20" />
                <Separator Background="#2D3748"
                           Margin="0,0,0,10" />
                <Button x:Name="BtnFixes"
                        Content="📦  Пакеты исправлений"
                        Style="{StaticResource ActiveMenuButtonStyle}"
                        Click="MenuButton_Click" />
                <Button x:Name="BtnDistros"
                        Content="💿  Дистрибутивы ПО"
                        Style="{StaticResource MenuButtonStyle}"
                        Click="MenuButton_Click" />
                <Button x:Name="BtnSettings"
                        Content="⚙️  Настройки"
                        Style="{StaticResource MenuButtonStyle}"
                        Click="MenuButton_Click" />
            </StackPanel>
        </Border>
        <!-- КОНТЕНТ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <!-- 0. Шапка -->
                <RowDefinition Height="*" />
                <!-- 1. Список (Контент) -->
                <RowDefinition Height="50" />
                <!-- 2. ПОДВАЛ (ВЕРНУЛИ) -->
                <RowDefinition Height="Auto" />
                <!-- 3. Выезжающая панель логов -->
            </Grid.RowDefinitions>
            <!-- ШАПКА -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,0,0,1">
                <Grid Margin="30,0">
                    <!-- СЛЕВА: ВЕРСИЯ -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                        <TextBlock Text="Текущая версия АИС Налог 3 Пром:"
                                   Foreground="#718096"
                                   FontSize="12" />
                        <TextBlock Text="{Binding CurrentVersion}"
                                   Foreground="#2D3748"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Margin="0,2,0,0" />
                    </StackPanel>
                    <!-- СПРАВА: СТАТУС И ОБНОВИТЬ -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <!-- Зеленая точка -->
                        <Ellipse Width="10"
                                 Height="10"
                                 Fill="#48BB78"
                                 Margin="0,0,10,0"
                                 VerticalAlignment="Center" />
                        <!-- Текст статуса -->
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Автопроверка активна"
                                       Foreground="#48BB78"
                                       FontSize="12"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="Обновлено: только что"
                                       Foreground="#A0AEC0"
                                       FontSize="10" />
                        </StackPanel>
                        <!-- Кнопка Refresh (↻) -->
                        <Button Command="{Binding CheckUpdatesCommand}"
                                Width="32"
                                Height="32"
                                Margin="20,0,0,0"
                                Background="White"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                Foreground="#4A5568"
                                FontSize="16"
                                Cursor="Hand"
                                ToolTip="Проверить обновления сейчас">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="↻"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- ГЛАВНАЯ ОБЛАСТЬ -->
            <Grid Grid.Row="1"
                  Margin="30,20">
                <!-- VIEW: FIXES -->
                <Grid x:Name="ViewFixes">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!-- Панель управления над списком -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="0,0,0,15">
                        <TextBlock Text="Список обновлений"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0" />
                        <!-- Переключатель режима -->
                        <Border Background="#EBF8FF"
                                CornerRadius="15"
                                Padding="10,5"
                                BorderBrush="#BEE3F8"
                                BorderThickness="1">
                            <CheckBox x:Name="ChkAutoSfx"
                                      IsChecked="{Binding AutoSfx}"
                                      Content="Авто-создание SFX (Fix_N.rar)"
                                      VerticalAlignment="Center"
                                      Foreground="#2C5282"
                                      FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>
                    <!-- СПИСОК ФАЙЛОВ -->
                    <ListView Grid.Row="1"
                              ItemsSource="{Binding Updates}"
                              BorderThickness="0"
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="Margin"
                                        Value="0,0,0,8" />
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="White"
                                                    BorderBrush="#E2E8F0"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Padding="15,10">
                                                <ContentPresenter />
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="5"
                                                                      ShadowDepth="1"
                                                                      Color="#000000"
                                                                      Opacity="0.05" />
                                                </Border.Effect>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30" />
                                        <!-- Чекбокс -->
                                        <ColumnDefinition Width="*" />
                                        <!-- Имя -->
                                        <ColumnDefinition Width="150" />
                                        <!-- Прогресс -->
                                        <ColumnDefinition Width="120" />
                                        <!-- Статус -->
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              VerticalAlignment="Center" />
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="#2D3748" />
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Date}"
                                                       FontSize="12"
                                                       Foreground="#A0AEC0"
                                                       Margin="0,0,10,0" />
                                            <TextBlock Text="{Binding Size}"
                                                       FontSize="12"
                                                       Foreground="#A0AEC0" />
                                        </StackPanel>
                                    </StackPanel>
                                    <!-- Прогресс бар (Виден только когда идет работа) -->
                                    <Grid Grid.Column="2"
                                          VerticalAlignment="Center"
                                          Margin="10,0">
                                        <ProgressBar Value="{Binding ProgressValue}"
                                                     Maximum="100"
                                                     Height="6"
                                                     BorderThickness="0"
                                                     Background="#EDF2F7"
                                                     Foreground="#48BB78">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsProcessing}"
                                                                     Value="False">
                                                            <Setter Property="Visibility"
                                                                    Value="Hidden" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                        <TextBlock Text="{Binding ProgressText}"
                                                   HorizontalAlignment="Center"
                                                   FontSize="10"
                                                   Foreground="#718096"
                                                   Margin="0,-15,0,0" />
                                    </Grid>
                                    <!-- Статус бейдж -->
                                    <Border Grid.Column="3"
                                            Background="{Binding StatusBgColor}"
                                            CornerRadius="12"
                                            Padding="10,4"
                                            HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding StatusText}"
                                                   FontSize="11"
                                                   Foreground="{Binding StatusFgColor}"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <!-- КНОПКИ ДЕЙСТВИЙ -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Скачать выбранное (Ручной)"
                                Command="{Binding ManualDownloadCommand}"
                                Background="Transparent"
                                Foreground="#718096"
                                BorderThickness="0"
                                Margin="0,0,20,0"
                                Cursor="Hand" />
                        <Button x:Name="BtnProcess"
                                Content="⬇️ Скачать и создать Fix_*.rar"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding DownloadCommand}"
                                Width="240" />
                    </StackPanel>
                </Grid>
                <!-- VIEW: SETTINGS (Заглушка для путей) -->
                <Grid x:Name="ViewSettings"
                      Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Настройки путей"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20" />
                        <TextBlock Text="Путь к WinRAR.exe (для создания SFX):"
                                   Foreground="#718096"
                                   Margin="0,0,0,5" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Text="C:\Program Files\WinRAR\WinRAR.exe"
                                     Padding="5"
                                     BorderBrush="#CBD5E0" />
                            <Button Grid.Column="1"
                                    Content="..."
                                    Width="30"
                                    Margin="5,0,0,0" />
                        </Grid>
                        <TextBlock Text="Папка выгрузки:"
                                   Foreground="#718096"
                                   Margin="0,15,0,5" />
                        <TextBox Text="C:\AIS_Updates\Output"
                                 Padding="5"
                                 BorderBrush="#CBD5E0" />
                    </StackPanel>
                </Grid>
            </Grid>
            <!-- ЛОГ ПАНЕЛЬ -->
            <Border Grid.Row="2"
                    Background="#EDF2F7"
                    Height="100"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,1,0,0">
                <ScrollViewer x:Name="LogScroll">
                    <TextBox Text="{Binding LogOutput, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="Transparent"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="12"
                             Foreground="#4A5568"
                             Padding="10"
                             TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>